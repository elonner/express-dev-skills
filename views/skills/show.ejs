<%- include('../partials/header') %>

    <h3>
        <%= skill.name %>
    </h3>
    <h4>Level:
        <% if (skill.level> 3) { %> Proficient
        <% } else if (skill.level < 2) { %> Learning
        <% } else { %> Intermediate
        <% } %>
    </h4>
    <a href="/skills/<%= skill.id %>/edit">Edit Skill</a>
    <br><br>
    <form action="/skills/<%= skill.id %>/?_method=DELETE" method="POST">
        <button type="submit">Delete Skill</button>
    </form>

    <%- include('../partials/footer') %>